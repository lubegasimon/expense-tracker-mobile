{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "Track your expenditure",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf ./build",
    "compile": "tsc --project tsconfig.json",
    "pre:migrate": "npm run compile",
    "migrate": "npx sequelize-cli db:migrate",
    "rollback": "npx sequelize-cli db:migrate:undo",
    "migration:create": "npx sequelize-cli migration:generate",
    "post:migration:create": "ls ./build/migrations/*.js | xargs -I {} sh -c 'mv $1 ./migrations/`basename $1 .js`.ts' - {}",
    "seeder:create": "npx sequelize-cli seed:generate",
    "post:seeder:create": "ls ./build/seeders/*.js | xargs -I {} sh -c 'mv $1 ./seeders/`basename $1 .js`.ts' - {}",
    "pre:seed": "npm run compile",
    "seed": "npx sequelize-cli db:seed:all",
    "undo:most:recent:seed": "npx sequelize-cli db:seed:undo",
    "start": "NODE_ENV=development ts-node ./src/app.ts",
    "redis": "redis-server",
    "fmt": "npx prettier . --write",
    "pretest": "npm run compile",
    "test": "NODE_ENV=test jest --runInBand ./build/src/test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.7",
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "bcrypt": "^5.1.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "redis": "^4.7.0",
    "sequelize": "^6.37.5",
    "supertest": "^7.0.0",
    "uuid": "^10.0.0",
    "walk-sync": "^3.0.0"
  }
}
